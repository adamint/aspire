@inherits LayoutComponentBase

@if (ViewportInformation.IsDesktop)
{
    <DesktopLayout LaunchHelpAsync="@LaunchHelpAsync"
                   LaunchSettingsAsync="@LaunchSettingsAsync"
                   MessageBarSection="@MessageBarSection"
                   LayoutBody="@Body"/>
}
else
{
    <MobileLayout LaunchHelpAsync="@LaunchHelpAsync"
                  LaunchSettingsAsync="@LaunchSettingsAsync"
                  MessageBarSection="@MessageBarSection"
                  LayoutBody="@Body"/>
}
