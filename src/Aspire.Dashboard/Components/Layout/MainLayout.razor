@inherits LayoutComponentBase
@inject IResizeListener ResizeListener

<CascadingValue Value="@ViewportInformation">
    @if (ViewportInformation.IsDesktop)
    {
        <DesktopLayout LaunchHelpAsync="@LaunchHelpAsync"
                       LaunchSettingsAsync="@LaunchSettingsAsync"
                       MessageBarSection="@MessageBarSection"
                       LayoutBody="@Body"/>
    }
    else
    {
        <MobileLayout LaunchHelpAsync="@LaunchHelpAsync"
                       LaunchSettingsAsync="@LaunchSettingsAsync"
                       MessageBarSection="@MessageBarSection"
                       LayoutBody="@Body"/>
    }
</CascadingValue>

<MediaQuery Media="@Breakpoints.SmallDown" @bind-Matches="_isSmall" />
