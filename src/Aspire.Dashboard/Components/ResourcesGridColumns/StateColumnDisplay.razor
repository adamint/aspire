@using Aspire.Dashboard.Resources

@{
    var vm = GetStateViewModel(Resource, Loc[Columns.UnknownStateLabel]);
}

<div class="state-column-cell">

    <FluentIcon
        Value="@vm.Icon"
        Color="@vm.Color"
        Class="severity-icon" />

    <span>@vm.Text</span>

    <UnreadLogErrorsBadge
        UnviewedErrorCounts="UnviewedErrorCounts"
        Resource="@Resource" />

</div>
